<Window x:Class="MediaCMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaCMS" 
        xmlns:usercontrols="clr-namespace:MediaCMS.UserControls"
        mc:Ignorable="d"  
        WindowState="Normal" 
        MinWidth="1280" 
        MinHeight="720"
        Title="CMS" 
        Height="1020" 
        Width="1728"
        Icon="Images/ic.ico">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <BitmapImage x:Key="OnImage" UriSource="pack://application:,,,/Images/pc.png"/>
        <BitmapImage x:Key="OffImage" UriSource="pack://application:,,,/Images/re.png"/>

        <!-- 소프트 그림자 효과 -->
        <DropShadowEffect x:Key="SoftShadow" 
                          BlurRadius="10" 
                          ShadowDepth="0" 
                          Color="#000000" 
                          Opacity="0.1"/>
        <!-- ContextMenu 스타일 -->
        <Style x:Key="CustomContextMenuStyle" TargetType="{x:Type ContextMenu}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContextMenu}">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Effect="{StaticResource SoftShadow}">
                            <StackPanel IsItemsHost="True" 
                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MenuItem 스타일 -->
        <Style x:Key="CustomMenuItemStyle" TargetType="{x:Type MenuItem}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderThickness="0"
                        Padding="{TemplateBinding Padding}">
                            <Grid>
                                <ContentPresenter Content="{TemplateBinding Header}"
                                        Margin="8,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" 
                                Property="Background" 
                                Value="#F5F6FA"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" 
                                Property="Background" 
                                Value="#E8E9ED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 모던 토글 버튼 스타일 -->
        <Style x:Key="ModernToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" 
                                CornerRadius="20"
                                Background="#E1E8FF">
                            <Grid>
                                <Border x:Name="Slider"
                                        Width="36" Height="36"
                                        CornerRadius="18"
                                        Background="White"
                                        HorizontalAlignment="Left"
                                        Margin="2,0,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="4" 
                                                        ShadowDepth="1" 
                                                        Color="#2C3E50" 
                                                        Opacity="0.2"/>
                                    </Border.Effect>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A6FFF"/>
                                <Setter TargetName="Slider" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Slider" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 모던 액션 버튼 스타일 -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="Background" Value="#4A6FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource NotoSansFontMediumFamily}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Effect="{StaticResource SoftShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="12,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3A5FFF"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 전원 버튼 기본 스타일 -->
        <Style x:Key="PowerButtonBase" TargetType="Button">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource NotoSansFontBoldFamily}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Effect="{StaticResource SoftShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4A6FFF" 
                                                        BlurRadius="15" 
                                                        ShadowDepth="0" 
                                                        Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 전원 ON 버튼 스타일 -->
        <Style x:Key="PowerOnButton" TargetType="Button" BasedOn="{StaticResource PowerButtonBase}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4CAF50" Offset="0"/>
                        <GradientStop Color="#45A049" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 전원 OFF 버튼 스타일 -->
        <Style x:Key="PowerOffButton" TargetType="Button" BasedOn="{StaticResource PowerButtonBase}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF5252" Offset="0"/>
                        <GradientStop Color="#FF1744" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 체크박스 스타일 -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="Border" 
                                Background="White" 
                                CornerRadius="10" 
                                BorderThickness="1"
                                BorderBrush="#E0E0E0"
                                Width="120" 
                                Height="120"
                                Effect="{StaticResource SoftShadow}">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                       Width="40" 
                                       Height="40" 
                                       Margin="0,0,0,10"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                         HorizontalAlignment="Center"
                                         FontFamily="{StaticResource NotoSansFontMediumFamily}"
                                         FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F0F7FF"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4A6FFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter TargetName="Border" Property="Background" Value="#F8F9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid" Background="#F5F6FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽 패널 -->
        <Grid Grid.Column="0" Background="#2C3E50">
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <!-- 버전 정보 -->
                <Grid Margin="20,0,20,0">
                    <TextBlock Text="v 0.18" 
                             Foreground="#8395A7" 
                             FontSize="12"
                             HorizontalAlignment="Left"/>
                </Grid>

                <!-- 타이틀 -->
                <TextBlock x:Name="p_title" 
                         Text="TITLE" 
                         FontFamily="{StaticResource NotoSansFontBoldFamily}"
                         FontSize="42"
                         Foreground="White"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,40"/>

                <!-- 자동 전원 설정 버튼 -->
                <Button x:Name="auto_wol_btn" 
                        Width="280" Height="80" 
                        Margin="0,0,0,20"
                        Click="Auto_wol_btn_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PowerButtonBase}">
                            <Setter Property="Background" Value="White"/>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/on_1.png" Width="40" Height="40"/>
                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Text="자동 전원 설정" 
                                     FontSize="18" 
                                     Foreground="#2C3E50"
                                     TextAlignment="Left" 
                                     Margin="0,0,0,5" 
                                     FontFamily="{StaticResource NotoSansFontBoldFamily}"/>
                            <TextBlock Text="요일별 시간 설정" 
                                     FontSize="14" 
                                     Foreground="#5D6D7E"
                                     TextAlignment="Left" 
                                     FontFamily="{StaticResource NotoSansFontMediumFamily}"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- 자동 전원 토글 -->
                <ToggleButton x:Name="AutoPowerToggle" 
                             Width="100" Height="40" 
                             Style="{StaticResource ModernToggleButton}"
                             Margin="0,0,0,40"
                             Checked="AutoPowerToggle_Checked" 
                             Unchecked="AutoPowerToggle_Unchecked"/>

                <!-- 장비 관리 버튼들 -->
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,40">
                    <Button Style="{StaticResource ModernActionButton}"
                            Width="120" Height="40"
                            Click="AddDevice_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M0,8 H16 M8,0 V16" 
                                  Stroke="White" 
                                  StrokeThickness="2" 
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="장비 추가"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernActionButton}"
                            Width="120" Height="40"
                            Margin="20,0,0,0"
                            Click="RemoveDevice_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M0,8 H16" 
                                  Stroke="White" 
                                  StrokeThickness="2" 
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="장비 삭제"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 전원 제어 버튼들 -->
                <Button Style="{StaticResource PowerOnButton}"
                        Click="TotalPowerBtnOn_Click" 
                        Margin="40,0,40,20">
                    <StackPanel>
                        <TextBlock Text="전체 전원" 
                                 FontSize="16" 
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="ON" 
                                 FontSize="32" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource PowerOffButton}"
                        Click="TotalPowerBtnOff_Click"
                        Margin="40,0,40,0">
                    <StackPanel>
                        <TextBlock Text="전체 전원" 
                                 FontSize="16" 
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="OFF" 
                                 FontSize="32" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 오른쪽 패널 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 필터 체크박스 영역 -->
            <Grid Margin="30,20,30,20">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Style="{StaticResource ModernCheckBox}" 
                  Content="PC" 
                  Tag="Images/pc.png"
                  Margin="0,0,20,0"/>
                    <CheckBox Style="{StaticResource ModernCheckBox}" 
                  Content="프로젝터" 
                  Tag="Images/projector.png"
                  Margin="0,0,20,0"/>
                    <CheckBox Style="{StaticResource ModernCheckBox}" 
                  Content="RELAY" 
                  Tag="Images/relay.png"
                  Margin="0,0,20,0"/>
                    <CheckBox Style="{StaticResource ModernCheckBox}" 
                  Content="PDU" 
                  Tag="Images/pdu.png"/>
                </StackPanel>
            </Grid>

            <!-- 리스트뷰 영역 -->
            <ListView Grid.Row="1" 
                      x:Name="MyListView"
                      Margin="30,0,30,30"
                      Background="Transparent"
                      BorderThickness="0"
                      AllowDrop="True"
                      PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
                      Drop="ListView_Drop"
                      MouseMove="ListView_MouseMove">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>

            <!-- 기존 Canvas영역 (숨김 상태) -->
            <Border Grid.Row="1" 
                    BorderThickness="1" 
                    BorderBrush="#E0E0E0" 
                    Margin="30,0,30,30" 
                    CornerRadius="12" 
                    Background="White" 
                    Visibility="Collapsed">
                <ScrollViewer Style="{StaticResource FlatScrollViewerStyle}" 
                            HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="GridContainer" 
                          Background="White" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Margin="20">
                        <Canvas x:Name="GridCanvas" 
                                MouseRightButtonDown="tt" 
                                MouseLeftButtonDown="Canvas_MouseDown">
                            <Canvas.ContextMenu>
                                <ContextMenu Style="{StaticResource CustomContextMenuStyle}">
                                    <MenuItem Style="{StaticResource CustomMenuItemStyle}" 
                                              Click="add_devi" 
                                              MouseEnter="MenuButton_MouseEnter"
                                              MouseLeave="MenuButton_MouseLeave">
                                        <MenuItem.Header>
                                            <TextBlock Text="장비 추가" 
                                                      FontSize="16" 
                                                      FontFamily="{StaticResource NotoSansFontBoldFamily}" 
                                                      FontWeight="Bold"/>
                                        </MenuItem.Header>
                                    </MenuItem>
                                </ContextMenu>
                            </Canvas.ContextMenu>
                        </Canvas>
                        <Canvas x:Name="ItemCanvas"/>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 오버레이 영역들 -->
        <!-- FileExplorer 오버레이 -->
        <Grid x:Name="OverlayGrid" 
              Grid.ColumnSpan="2" 
              Visibility="Collapsed">
            <Rectangle Fill="Black" Opacity="0.5"/>
            <Border x:Name="FileExplorerBorder" 
                    Margin="40"
                    Background="White" 
                    CornerRadius="12"
                    Effect="{StaticResource SoftShadow}">
                <local:FileExplorerControl x:Name="FileExplorerControl"/>
            </Border>
        </Grid>

        <!-- 자동 전원 설정 오버레이 -->
        <local:AutoPowerSettingsControl x:Name="AutoPowerSettingsControl" 
                                      Grid.ColumnSpan="2"
                                      Visibility="Collapsed"/>

        <!-- 전원 진행 상태 오버레이 -->
        <Grid x:Name="PowerOverlay" 
              Grid.ColumnSpan="2"
              Visibility="Collapsed">
            <Rectangle Fill="Black" Opacity="0.7"/>
            <StackPanel VerticalAlignment="Center" 
                       Margin="40">
                <TextBlock x:Name="PowerStatusText" 
                         Text="전원 ON" 
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,30" 
                         FontSize="24" 
                         Foreground="White" 
                         FontFamily="{StaticResource NotoSansFontBoldFamily}"/>

                <ProgressBar x:Name="PowerProgressBar"  
                           Width="500" 
                           Height="50" 
                           Minimum="0" 
                           Maximum="100" 
                           Value="0">
                    <ProgressBar.Template>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid>
                                <Border x:Name="PART_Track"
                                        Background="#333333"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="25">
                                    <Border x:Name="PART_Indicator" 
                                            Background="#4CAF50"
                                            HorizontalAlignment="Left"
                                            CornerRadius="25">
                                        <TextBlock Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:0}%}"
                                                 VerticalAlignment="Center" 
                                                 HorizontalAlignment="Center"
                                                 Foreground="White" 
                                                 FontWeight="Bold" 
                                                 FontSize="20"
                                                 FontFamily="{StaticResource NotoSansFontBoldFamily}"/>
                                    </Border>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </ProgressBar.Template>
                </ProgressBar>
            </StackPanel>
        </Grid>
        <!-- editpanel 추가 -->
        <StackPanel Grid.Column="1" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            x:Name="editpanel" 
            Visibility="Collapsed"
            Margin="0,20,30,0">
            <Button Width="80" 
            Height="40" 
            Margin="0,0,10,0" 
            Style="{StaticResource ModernActionButton}"
            Click="item_delete">
                <TextBlock Text="완료"/>
            </Button>
            <Button Width="80" 
            Height="40" 
            Style="{StaticResource ModernActionButton}"
            Click="editpanel_close">
                <TextBlock Text="취소"/>
            </Button>
        </StackPanel>

        <!-- 장비 추가 패널 -->
        <Grid Grid.ColumnSpan="2" 
              x:Name="add_device_ppanel" 
              Visibility="Collapsed">
            <Rectangle Fill="Black" Opacity="0.5"/>
            <Border Margin="40"
                    Background="White"
                    CornerRadius="12"
                    Effect="{StaticResource SoftShadow}">
                <usercontrols:AddDeviceControl x:Name="addDeviceWindow"/>
            </Border>
        </Grid>
    </Grid>
</Window>